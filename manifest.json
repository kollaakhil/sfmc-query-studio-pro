{
  "manifest_version": 3,
  "name": "SFMC Query Studio Pro",
  "version": "2.0.0",
  "description": "The ultimate SQL editor for Salesforce Marketing Cloud â€” SFMC-aware syntax highlighting, smart autocomplete, 16 query templates, SQL validation, formatter, snippets, and more.",
  "permissions": ["storage", "clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.exacttarget.com/*",
        "*://*.marketingcloudapps.com/*",
        "*://*.sfmc.marketingcloudapps.com/*",
        "*://*.mc.s*.exacttarget.com/*",
        "*://*.mc.s*.marketingcloudapps.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "format-sql": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Format SQL query"
    },
    "save-snippet": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save current query as snippet"
    }
  }
}
